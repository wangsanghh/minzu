.container {
  background: linear-gradient(135deg, #f5f7fa 0%, #e4edf5 100%);
  min-height: 100vh;
  padding: 0;
  box-sizing: border="0";
}

/* 顶部导航栏 */
.nav-bar {
  background: linear-gradient(90deg, #1E90FF 0%, #00BFFF 100%);
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(30, 144, 255, 0.3);
  position: relative;
  z-index: 100;
}

.nav-back {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  color: white;
}

.nav-title {
  flex: 1;
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  text-align: center;
  padding-right: 60rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

/* 搜索框样式 */
.search-container {
  background: linear-gradient(90deg, #1E90FF 0%, #00BFFF 100%);
  padding: 20rpx;
  border-radius: 0 0 20rpx 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(30, 144, 255, 0.3);
}

.search-box {
  display: flex;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 40rpx;
  padding: 15rpx 20rpx;
  backdrop-filter: blur(10rpx);
}

.search-icon {
  margin-right: 10rpx;
  color: #1E90FF;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  background: transparent;
}

/* 分类标题样式 */
.section-title {
  margin: 30rpx 20rpx 20rpx;
}

.section-title text {
  font-size: 36rpx;
  font-weight: bold;
  color: #1E3A8A;
  padding-left: 15rpx;
  border-left: 8rpx solid #1E90FF;
  letter-spacing: 1rpx;
}

/* 民族网格样式 */
.nation-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 20rpx 20rpx;
}

.nation-item {
  width: 22%;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 20rpx 10rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.nation-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(30, 144, 255, 0.1) 0%, rgba(0, 191, 255, 0.1) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.nation-item:hover::before {
  opacity: 1;
}

.nation-item:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.nation-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
  border-radius: 50%;
  border: 2rpx solid #e0e0e0;
  padding: 4rpx;
  box-sizing: border-box;
}

.nation-name {
  font-size: 24rpx;
  color: #1E3A8A;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-weight: 500;
}