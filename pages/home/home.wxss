.nation-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  padding: 0 8rpx 15rpx;
}

.nation-item {
  width: 21%;
  background: linear-gradient(135deg, #ffffff 0%, #f0f4f8 100%);
  border-radius: 16rpx;
  margin-bottom: 12rpx;
  margin-left: 2%;
  margin-right: 2%;
  padding: 25rpx 8rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 1rpx solid rgba(30, 144, 255, 0.1);
}

.nation-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(30, 144, 255, 0.15) 0%, rgba(0, 191, 255, 0.15) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.nation-item:hover::before {
  opacity: 1;
}

.nation-item:hover {
  transform: translateY(-5rpx);
  box-shadow: 0 10rpx 20rpx rgba(30, 144, 255, 0.2);
}

.nation-item:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.nation-name {
  font-size: 26rpx;
  color: #1E3A8A;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-weight: 600;
  letter-spacing: 1rpx;
  position: relative;
  padding-left: 30rpx;
}

