<!-- 首页 -->
<view class="container">
  <!-- 顶部导航栏 -->
  <view class="nav-bar">
    <text class="nav-title">文枢智伴</text>
  </view>

  <!-- 搜索框 -->
  <view class="search-container">
    <view class="search-box">
      <icon type="search" size="16" class="search-icon"></icon>
      <input 
        class="search-input" 
        placeholder="搜索民族或关键词" 
        value="{{searchValue}}" 
        bindinput="onSearchInput"
        bindconfirm="onSearchConfirm"
      />
    </view>
  </view>

  <!-- 民族分类标题和网格 或 搜索结果标题和网格 -->
  <block wx:if="{{searchResults.length > 0}}">
    <!-- 搜索结果标题 -->
    <view class="section-title search-result-title">
      <text>搜索结果</text>
    </view>
    
    <!-- 搜索结果网格 -->
    <view class="nation-grid">
      <block wx:for="{{searchResults}}" wx:key="id">
        <view class="nation-item" bindtap="onNationTap" data-id="{{item.id}}">
          <text class="nation-name">{{item.name}}</text>
        </view>
      </block>
    </view>
  </block>
  
  <block wx:else>
    <!-- 民族分类标题 -->
    <view class="section-title">
      <text>铸牢中华民族共体意识</text>
    </view>
    
    <!-- 民族模块网格 -->
    <view class="nation-grid">
      <block wx:for="{{nations}}" wx:key="id">
        <view class="nation-item" bindtap="onNationTap" data-id="{{item.id}}">
          <text class="nation-name">{{item.name}}</text>
        </view>
      </block>
    </view>
  </block>
</view>