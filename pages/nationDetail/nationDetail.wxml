<!-- 民族详情页面 -->
<scroll-view class="container" scroll-y="true" enhanced="{{true}}" show-scrollbar="{{false}}">
  <!-- 顶部导航栏 -->
  <view class="nav-bar">
    <navigator class="back-button" open-type="navigateBack">
      <icon type="arrow-left" size="20" color="white"></icon>
    </navigator>
    <text class="nav-title">{{nation.name}}</text>
  </view>

  <!-- 民族基本信息 -->
  <view class="nation-header">
    <view class="nation-header-content">
      <image class="nation-icon" src="{{nation.icon}}" mode="aspectFit"></image>
      <text class="nation-name">{{nation.name}}</text>
    </view>
  </view>

  <!-- 内容区域 -->
  <view class="content-wrapper">
    <!-- 民族介绍 -->
    <view class="section">
      <view class="section-title">民族介绍</view>
      <view class="section-content">
        <text class="content-text">{{nation.introduction}}</text>
      </view>
    </view>

    <!-- 民族美食 -->
    <view class="section">
      <view class="section-title">民族美食</view>
      <view class="section-content">
        <text class="content-text">{{nation.food}}</text>
      </view>
    </view>

    <!-- 民族文化 -->
    <view class="section">
      <view class="section-title">民族文化</view>
      <view class="section-content">
        <text class="content-text">{{nation.culture}}</text>
      </view>
    </view>

    <!-- 民族风俗 -->
    <view class="section">
      <view class="section-title">民族风俗</view>
      <view class="section-content">
        <text class="content-text">{{nation.customs}}</text>
      </view>
    </view>

    <!-- 民族乐器 -->
    <view class="section">
      <view class="section-title">民族乐器</view>
      <view class="section-content">
        <text class="content-text">{{nation.instruments}}</text>
      </view>
    </view>

    <!-- 获取更详细信息按钮 -->
    <view class="deep-detail-button" bindtap="onDeepDetailTap">
      <text class="button-text">获取更详细信息</text>
      <view class="button-icon">📖</view>
    </view>
  </view>
</scroll-view>