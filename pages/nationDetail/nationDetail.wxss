.container {
  height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #e4edf5 100%);
}

/* 内容包装器 */
.content-wrapper {
  padding: 0 0 30rpx 0;
}

/* 文本内容优化 */
.content-text {
  display: block;
  font-size: 30rpx;
  color: #333333;
  line-height: 1.8;
  text-align: justify;
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-wrap;
  letter-spacing: 0.5rpx;
}

/* 顶部导航栏 */
.nav-bar {
  background: linear-gradient(90deg, #1E90FF 0%, #00BFFF 100%);
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(30, 144, 255, 0.3);
  position: relative;
  z-index: 100;
}

.nav-back {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  color: white;
}

.nav-title {
  flex: 1;
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  text-align: center;
  padding-right: 60rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
  position: relative;
}

.nav-title::before {
  content: "🇨🇳";
  position: absolute;
  left: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
}

.nav-title::after {
  content: "🎭";
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
}

.back-button {
  position: absolute;
  left: 30rpx;
  z-index: 101;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 60rpx;
  font-size: 32rpx;
  color: #1E3A8A;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 20rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.1);
  margin: 20rpx;
}

.loading::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(30, 144, 255, 0.05) 0%, rgba(0, 191, 255, 0.05) 100%);
  z-index: 1;
}

/* 民族头部信息 */
.nation-header {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 0 0 20rpx 20rpx;
  padding: 50rpx 20rpx;
  text-align: center;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.1);
  position: relative;
  overflow: hidden;
}

.nation-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(30, 144, 255, 0.05) 0%, rgba(0, 191, 255, 0.05) 100%);
  z-index: 1;
}

.nation-header-content {
  position: relative;
  z-index: 2;
}

.nation-icon {
  width: 140rpx;
  height: 140rpx;
  margin-bottom: 20rpx;
  border-radius: 50%;
  border: 4rpx solid #e0e0e0;
  padding: 8rpx;
  box-sizing: border-box;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.nation-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #1E3A8A;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  position: relative;
  padding-left: 40rpx;
}

.nation-name::before {
  content: "🎭";
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
}

/* 各个板块样式 */
.section {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  margin: 20rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.1);
  position: relative;
  overflow: visible;
  transition: all 0.3s ease;
  min-height: auto;
}

.section:hover {
  box-shadow: 0 8rpx 20rpx rgba(30, 144, 255, 0.2);
  transform: translateY(-4rpx);
}

.section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(30, 144, 255, 0.03) 0%, rgba(0, 191, 255, 0.03) 100%);
  z-index: 1;
}

.section-content {
  position: relative;
  z-index: 2;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1E3A8A;
  margin-bottom: 20rpx;
  padding-left: 15rpx;
  border-left: 8rpx solid #1E90FF;
  letter-spacing: 1rpx;
  position: relative;
}

/* 为不同板块标题添加emoji装饰 */
.section-title:nth-child(1)::before {
  content: "📖";
  position: absolute;
  left: -30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
}

.section-title:nth-child(2)::before {
  content: "🍜";
  position: absolute;
  left: -30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
}

.section-title:nth-child(3)::before {
  content: "🎭";
  position: absolute;
  left: -30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
}

.section-title:nth-child(4)::before {
  content: "🎊";
  position: absolute;
  left: -30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
}

.section-title:nth-child(5)::before {
  content: "🎵";
  position: absolute;
  left: -30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
}

.section-content {
  font-size: 30rpx;
  color: #333333;
  line-height: 1.8;
  text-align: justify;
  word-wrap: break-word;
  word-break: break-all;
  white-space: normal;
  padding: 10rpx 0;
  max-height: none;
  overflow: visible;
  display: block;
}

/* 深度详情按钮 */
.deep-detail-button {
  background: linear-gradient(90deg, #1E90FF 0%, #00BFFF 100%);
  border-radius: 50rpx;
  padding: 30rpx 40rpx;
  margin: 40rpx 20rpx 50rpx;
  text-align: center;
  box-shadow: 0 8rpx 20rpx rgba(30, 144, 255, 0.4);
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 1;
  visibility: visible;
  border: 2rpx solid transparent;
}

.deep-detail-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.2) 0%, rgba(255, 255, 255, 0) 100%);
  z-index: 1;
}

.deep-detail-button:hover {
  box-shadow: 0 12rpx 24rpx rgba(30, 144, 255, 0.6);
  transform: translateY(-4rpx);
}

.deep-detail-button:active {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 16rpx rgba(30, 144, 255, 0.5);
}

.button-text {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
  position: relative;
  z-index: 2;
  letter-spacing: 2rpx;
  margin-right: 10rpx;
}

.button-icon {
  font-size: 28rpx;
  position: relative;
  z-index: 2;
}

/* 为按钮添加emoji装饰 */
.deep-detail-button::after {
  content: "🔍";
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  z-index: 2;
}