.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 民族头部信息 */
.nation-header {
  background-color: white;
  border-radius: 10rpx;
  padding: 40rpx 20rpx;
  text-align: center;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.nation-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.nation-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 各个板块样式 */
.section {
  background-color: white;
  border-radius: 10rpx;
  padding: 30rpx 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1E90FF;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
  border-left: 6rpx solid #1E90FF;
}

.section-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}