.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
}

.calendar-navigation {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: white;
  padding: 20rpx 30rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.nav-button {
  background-color: #2196f3;
  color: white;
  border: none;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.nav-button:active {
  background-color: #1976d2;
}

.month {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.calendar-grid {
  display: flex;
  flex-wrap: wrap;
  background-color: white;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.weekdays {
  display: flex;
  width: 100%;
  margin-bottom: 10rpx;
}

.weekday {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  color: #666;
  font-weight: bold;
}

.calendar-day {
  flex: 14.2857%;
  height: 80rpx;
  text-align: center;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.calendar-day.today {
  background-color: #e3f2fd;
  border-radius: 10rpx;
}

.calendar-day.has-event {
  background-color: #fce4ec;
  border-radius: 10rpx;
}

.day-number {
  font-size: 28rpx;
  color: #333;
}

.event-marker {
  position: absolute;
  bottom: 5rpx;
  font-size: 20rpx;
  color: #f44336;
}

/* 节日详情显示区域 */
.event-details {
  background-color: white;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-top: 20rpx;
}

.event-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1E90FF;
  display: block;
  margin-bottom: 10rpx;
}

.event-date {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 20rpx;
}

.event-description {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.detail-button {
  background-color: #4CAF50;
  color: white;
  border: none;
  padding: 15rpx 30rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  margin-top: 20rpx;
}

.detail-button:active {
  background-color: #45a049;
}

.detail-button[disabled] {
  background-color: #cccccc;
  color: #666666;
}

.event-detail {
  font-size: 26rpx;
  color: #444;
  line-height: 1.6;
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
}

.loading {
  text-align: center;
  padding: 30rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

.festival-detail-container {
  margin-top: 30rpx;
}

.detail-section {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1E90FF;
  display: block;
  margin-bottom: 15rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #eee;
}

.section-content {
  font-size: 26rpx;
  color: #444;
  line-height: 1.6;
}