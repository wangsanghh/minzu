.container {
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  min-height: 100vh;
  padding: 0;
  box-sizing: border-box;
}

/* 顶部导航栏 */
.nav-bar {
  background: linear-gradient(90deg, #1E3A8A, #2563EB);
  padding: 15rpx 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 3rpx 8rpx rgba(0, 0, 0, 0.15);
  position: relative;
  z-index: 10;
}

.nav-back {
  width: 30rpx;
  height: 30rpx;
  margin-right: 15rpx;
}

.back-button {
  background: none;
  border: none;
  padding: 0;
  width: 30rpx;
  height: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-button::after {
  display: none;
}

.nav-title {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  flex: 1;
  text-align: center;
  text-shadow: 1rpx 1rpx 2rpx rgba(0, 0, 0, 0.3);
}

.header {
  padding: 15rpx;
  text-align: center;
  background: linear-gradient(90deg, #ffffff, #f0f4f8);
  margin: 15rpx;
  border-radius: 15rpx;
  box-shadow: 0 3rpx 8rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1E3A8A;
  text-shadow: 1rpx 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.calendar-navigation {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: linear-gradient(90deg, #ffffff, #f0f4f8);
  padding: 20rpx;
  border-radius: 0;
  margin: 15rpx;
  box-shadow: 0 3rpx 8rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 5;
}

.nav-button {
  background: linear-gradient(90deg, #2196f3, #21cbf3);
  color: white;
  border: none;
  padding: 12rpx 20rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
  box-shadow: 0 2rpx 4rpx rgba(33, 150, 243, 0.3);
  transition: all 0.3s ease;
}

.nav-button:active {
  background: linear-gradient(90deg, #1976d2, #0ea1d6);
  transform: translateY(1rpx);
  box-shadow: 0 1rpx 2rpx rgba(33, 150, 243, 0.3);
}

.nav-button:hover {
  transform: translateY(-1rpx);
  box-shadow: 0 3rpx 6rpx rgba(33, 150, 243, 0.4);
}

.month {
  font-size: 28rpx;
  font-weight: bold;
  color: #1E3A8A;
  text-shadow: 1rpx 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.weekdays {
  display: flex;
  width: 100%;
  margin: 15rpx;
  padding: 0 15rpx;
  background: linear-gradient(135deg, #ffffff, #f8f9fa);
  border-radius: 15rpx;
  box-shadow: 0 3rpx 8rpx rgba(0, 0, 0, 0.1);
  padding: 15rpx;
}

.weekday {
  width: calc(100% / 7);
  text-align: center;
  font-size: 24rpx;
  color: #1E3A8A;
  font-weight: bold;
  box-sizing: border-box;
  text-shadow: 1rpx 1rpx 1rpx rgba(0, 0, 0, 0.1);
}

.calendar-grid {
  display: flex;
  flex-wrap: wrap;
  background: linear-gradient(135deg, #ffffff, #f8f9fa);
  border-radius: 0 0 15rpx 15rpx;
  padding: 15rpx;
  margin: 15rpx;
  box-shadow: 0 3rpx 8rpx rgba(0, 0, 0, 0.1);
}

.calendar-day {
  width: calc(100% / 7 - 10rpx);
  height: 70rpx;
  text-align: center;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  margin: 5rpx;
  transition: all 0.3s ease;
  border-radius: 8rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.1);
}

.calendar-day.today {
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
  border: 1rpx solid #2196f3;
  transform: scale(1.05);
  box-shadow: 0 2rpx 4rpx rgba(33, 150, 243, 0.4);
}

.calendar-day.today .day-number {
  color: #0d47a1;
  font-weight: bold;
  text-shadow: 1rpx 1rpx 1rpx rgba(0, 0, 0, 0.1);
  font-size: 28rpx;
}

.calendar-day.has-event {
  background: linear-gradient(135deg, #fce4ec 0%, #f8bbd0 100%);
  transform: scale(1.03);
  box-shadow: 0 2rpx 4rpx rgba(244, 67, 54, 0.3);
}

.calendar-day.has-event:hover {
  transform: scale(1.08);
  box-shadow: 0 3rpx 6rpx rgba(244, 67, 54, 0.4);
}

.calendar-day:hover {
  transform: scale(1.1);
  box-shadow: 0 3rpx 6rpx rgba(0, 0, 0, 0.2);
}

.day-number {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.event-marker {
  position: absolute;
  bottom: 4rpx;
  font-size: 16rpx;
  color: #f44336;
  font-weight: bold;
  text-shadow: 1rpx 1rpx 1rpx rgba(0, 0, 0, 0.1);
}

/* 节日详情显示区域 */
.event-details {
  background: linear-gradient(135deg, #ffffff, #f0f4f8);
  border-radius: 15rpx;
  padding: 20rpx;
  margin: 15rpx;
  box-shadow: 0 3rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.event-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1E3A8A;
  display: block;
  margin-bottom: 12rpx;
  text-shadow: 1rpx 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.event-date {
  font-size: 24rpx;
  color: #555;
  display: block;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.event-description {
  font-size: 24rpx;
  color: #444;
  line-height: 1.6;
  margin-bottom: 15rpx;
}

.detail-button {
  background: linear-gradient(135deg, #4CAF50, #2E7D32);
  color: white;
  border: none;
  padding: 12rpx 20rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
  margin-top: 15rpx;
  box-shadow: 0 2rpx 4rpx rgba(76, 175, 80, 0.3);
  transition: all 0.3s ease;
}

.detail-button:active {
  background: linear-gradient(135deg, #388E3C, #1B5E20);
  transform: translateY(1rpx);
  box-shadow: 0 1rpx 2rpx rgba(76, 175, 80, 0.3);
}

.detail-button:hover {
  transform: translateY(-1rpx);
  box-shadow: 0 3rpx 6rpx rgba(76, 175, 80, 0.4);
}

.loading {
  text-align: center;
  padding: 20rpx 0;
  background: linear-gradient(135deg, #ffffff, #f0f4f8);
  border-radius: 15rpx;
  margin: 15rpx;
  box-shadow: 0 3rpx 8rpx rgba(0, 0, 0, 0.1);
}

.loading-text {
  font-size: 24rpx;
  color: #666;
}

.festival-detail-container {
  margin-top: 20rpx;
}

.detail-section {
  margin-bottom: 20rpx;
  padding: 15rpx;
  background: linear-gradient(135deg, #f9f9f9, #e3f2fd);
  border-radius: 12rpx;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #1E3A8A;
  display: block;
  margin-bottom: 12rpx;
  padding-bottom: 8rpx;
  border-bottom: 1rpx solid #eee;
  text-shadow: 1rpx 1rpx 1rpx rgba(0, 0, 0, 0.1);
}

.section-content {
  font-size: 22rpx;
  color: #444;
  line-height: 1.6;
}

@media (max-width: 768px) {
  .container {
    padding: 10rpx;
  }
  
  .calendar-day {
    height: 60rpx;
  }
  
  .day-number {
    font-size: 24rpx;
  }
  
  .nav-button {
    padding: 10rpx 15rpx;
    font-size: 22rpx;
  }
  
  .month {
    font-size: 26rpx;
  }
}