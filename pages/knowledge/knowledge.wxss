.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
}

.header {
  background-color: white;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1E90FF;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.content {
  background-color: white;
  border-radius: 10rpx;
  padding: 60rpx 30rpx;
  text-align: center;
}

.generate-btn {
  background-color: #1E90FF;
  color: white;
  border: none;
  border-radius: 40rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.generate-btn:active {
  background-color: #0066cc;
}