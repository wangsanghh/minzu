.container {
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
  animation: fadeIn 0.5s ease-out;
}

.container::before {
  content: "";
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.2) 0%, rgba(255,255,255,0) 70%);
  transform: rotate(30deg);
  z-index: 0;
}

.container::after {
  content: "📚 🎭 🎨 🎵 🕊️";
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  font-size: 36rpx;
  opacity: 0.7;
  animation: float 6s ease-in-out infinite;
}

@keyframes float {
  0% {
    transform: translateY(0rpx);
  }
  50% {
    transform: translateY(-20rpx);
  }
  100% {
    transform: translateY(0rpx);
  }
}

.container > view {
  position: relative;
  z-index: 1;
}

.header {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  text-align: center;
  box-shadow: 0 10rpx 30rpx rgba(25, 118, 210, 0.15);
  border: 1rpx solid rgba(197, 225, 250, 0.8);
  animation: slideInUp 0.5s ease-out;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #0d47a1;
  display: block;
  margin-bottom: 20rpx;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  background: linear-gradient(135deg, #0d47a1, #1565c0);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  position: relative;
  padding: 10rpx 0;
}

.title::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 200rpx;
  height: 6rpx;
  background: linear-gradient(90deg, transparent, #1565c0, transparent);
  border-radius: 3rpx;
}

.subtitle {
  font-size: 32rpx;
  color: #1565c0;
  font-weight: 500;
  margin-top: 30rpx;
  padding: 15rpx 20rpx;
  background: rgba(197, 225, 250, 0.6);
  border-radius: 30rpx;
  display: inline-block;
  box-shadow: 0 4rpx 10rpx rgba(21, 99, 192, 0.15);
}

.content {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 80rpx 30rpx;
  text-align: center;
  box-shadow: 0 10rpx 30rpx rgba(25, 118, 210, 0.15);
  border: 1rpx solid rgba(197, 225, 250, 0.8);
  animation: slideInUp 0.7s ease-out;
  position: relative;
  overflow: hidden;
}

.content::before {
  content: "";
  position: absolute;
  top: -10rpx;
  left: -10rpx;
  right: -10rpx;
  bottom: -10rpx;
  background: radial-gradient(circle at center, rgba(33, 150, 243, 0.1) 0%, transparent 70%);
  z-index: -1;
  animation: pulse 4s ease-in-out infinite;
}

@keyframes pulse {
  0% {
    transform: scale(1);
    opacity: 0.5;
  }
  50% {
    transform: scale(1.05);
    opacity: 0.8;
  }
  100% {
    transform: scale(1);
    opacity: 0.5;
  }
}

.generate-btn {
  background: linear-gradient(135deg, #2196F3 0%, #0d47a1 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 30rpx 60rpx;
  font-size: 36rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 20rpx rgba(33, 150, 243, 0.4);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  letter-spacing: 2rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
  animation: subtlePulse 2s ease-in-out infinite;
}

@keyframes subtlePulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.02);
  }
  100% {
    transform: scale(1);
  }
}

.generate-btn::after {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  width: 5rpx;
  height: 5rpx;
  background: rgba(255, 255, 255, 0.5);
  opacity: 0;
  border-radius: 100%;
  transform: scale(1, 1) translate(-50%);
  transform-origin: 50% 50%;
}

.generate-btn:active::after {
  animation: ripple 0.6s ease-out;
}

@keyframes ripple {
  0% {
    transform: scale(0, 0);
    opacity: 0.5;
  }
  100% {
    transform: scale(50, 50);
    opacity: 0;
  }
}

.generate-btn:hover {
  transform: translateY(-5rpx);
  box-shadow: 0 12rpx 25rpx rgba(33, 150, 243, 0.5);
}

.generate-btn:active {
  transform: scale(0.95);
  background: linear-gradient(135deg, #0d47a1 0%, #01579b 100%);
  box-shadow: 0 4rpx 15rpx rgba(33, 150, 243, 0.4);
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideInUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}