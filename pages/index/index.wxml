<view class="container">
  <view class="chat-container">
    <!-- 聊天记录显示区域 -->
    <scroll-view class="chat-history" scroll-y="true" scroll-top="{{scrollTop}}">
      <block wx:for="{{messages}}" wx:key="index">
        <view class="message {{item.role === 'user' ? 'user-message' : 'ai-message'}}">
          <text class="message-content">{{item.content}}</text>
        </view>
      </block>
    </scroll-view>
    
    <!-- 输入区域 -->
    <view class="input-container">
      <input 
        class="message-input" 
        placeholder="请输入消息..." 
        value="{{inputValue}}" 
        bindinput="onInput" 
        bindconfirm="onSend"
      />
      <button class="send-button" bindtap="onSend">发送</button>
    </view>
  </view>
</view>