.container { 
  display: flex; 
  flex-direction: column; 
  padding: 20rpx; 
  background: linear-gradient(135deg, #e3f2fd, #bbdefb); 
  min-height: 100vh; 
  font-family: "PingFang SC", "Microsoft YaHei", sans-serif;
} 

.header { 
  text-align: center; 
  padding: 30rpx 0; 
  margin-bottom: 20rpx; 
  background: linear-gradient(135deg, #1E90FF, #2196F3); 
  border-radius: 15rpx; 
  box-shadow: 0 6rpx 16rpx rgba(30, 144, 255, 0.3); 
} 

.title { 
  font-size: 36rpx; 
  font-weight: bold; 
  color: white; 
  text-shadow: 1rpx 1rpx 2rpx rgba(0, 0, 0, 0.3); 
  font-family: "PingFang SC", "Microsoft YaHei", sans-serif;
} 

.upload-section { 
  margin-bottom: 30rpx; 
} 

.upload-box { 
  height: 400rpx; 
  background: linear-gradient(135deg, #ffffff, #f5f9ff); 
  border-radius: 20rpx; 
  display: flex; 
  justify-content: center; 
  align-items: center; 
  border: 2rpx dashed #1E90FF; 
  box-shadow: 0 4rpx 12rpx rgba(30, 144, 255, 0.2); 
} 

.uploaded-image { 
  width: 100%; 
  height: 100%; 
  border-radius: 20rpx; 
} 

.upload-placeholder { 
  display: flex; 
  flex-direction: column; 
  align-items: center; 
} 

.upload-icon { 
  font-size: 80rpx; 
  margin-bottom: 20rpx; 
  color: #1E90FF;
  font-family: "PingFang SC", "Microsoft YaHei", sans-serif;
} 

.upload-text { 
  font-size: 32rpx; 
  color: #1E90FF; 
  margin-bottom: 10rpx; 
  font-weight: bold; 
  font-family: "PingFang SC", "Microsoft YaHei", sans-serif;
} 

.upload-hint { 
  font-size: 24rpx; 
  color: #666; 
  font-family: "PingFang SC", "Microsoft YaHei", sans-serif;
} 

.button-section { 
  display: flex; 
  flex-direction: column; 
  gap: 20rpx; 
  margin-bottom: 30rpx; 
} 

.action-button { 
  border: none; 
  border-radius: 15rpx; 
  padding: 25rpx; 
  font-size: 32rpx; 
  font-weight: bold; 
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1); 
  transition: all 0.3s ease; 
} 

.action-button:active { 
  transform: scale(0.98); 
} 

.recognize-button { 
  background: linear-gradient(135deg, #1E90FF, #2196F3); 
  color: white; 
} 

.history-button { 
  background: linear-gradient(135deg, #9c27b0, #8e24aa); 
  color: white; 
} 

.result-section { 
  margin-bottom: 30rpx; 
} 

.result-card { 
  background: linear-gradient(135deg, #ffffff, #f5f9ff); 
  border-radius: 20rpx; 
  padding: 30rpx; 
  box-shadow: 0 6rpx 16rpx rgba(30, 144, 255, 0.2); 
} 

.result-header { 
  border-bottom: 2rpx solid #eee; 
  padding-bottom: 20rpx; 
  margin-bottom: 20rpx; 
} 

.result-title { 
  font-size: 32rpx; 
  font-weight: bold; 
  color: #1E90FF; 
  font-family: "PingFang SC", "Microsoft YaHei", sans-serif;
} 

.result-content { 
  display: flex; 
  flex-direction: column; 
  gap: 15rpx; 
} 

.nation-name { 
  font-size: 36rpx; 
  font-weight: bold; 
  color: #333; 
  font-family: "PingFang SC", "Microsoft YaHei", sans-serif;
} 

.confidence { 
  font-size: 28rpx; 
  color: #666; 
} 

.history-section {
  margin-bottom: 30rpx;
}

.history-card {
  background: linear-gradient(135deg, #ffffff, #f5f9ff);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 6rpx 16rpx rgba(30, 144, 255, 0.2);
  margin-top: 20rpx;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #eee;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
}

.history-title { 
  font-size: 32rpx; 
  font-weight: bold; 
  color: #1E90FF; 
  font-family: "PingFang SC", "Microsoft YaHei", sans-serif;
}

.clear-button {
  background: linear-gradient(135deg, #ff6b6b, #ff5252);
  color: white;
  border: none;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.3);
}

.clear-button:active {
  transform: scale(0.98);
}

.history-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.history-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 15rpx;
  background: rgba(245, 245, 245, 0.8);
  border-radius: 15rpx;
  border: 1rpx solid rgba(30, 144, 255, 0.3);
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 10rpx rgba(30, 144, 255, 0.1);
}

.history-item:active {
  background: rgba(197, 225, 250, 0.6);
  transform: scale(0.98);
}

.history-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  object-fit: cover;
  border: 2rpx solid rgba(255, 255, 255, 0.7);
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.history-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.history-nation {
  font-size: 30rpx;
  font-weight: bold;
  color: #1E90FF;
  margin-bottom: 5rpx;
  font-family: "PingFang SC", "Microsoft YaHei", sans-serif;
}

.history-confidence {
  font-size: 24rpx;
  color: rgba(30, 144, 255, 0.9);
  margin-bottom: 5rpx;
}

.history-time {
  font-size: 22rpx;
  color: rgba(30, 144, 255, 0.7);
}

.history-arrow {
  font-size: 32rpx;
  color: rgba(30, 144, 255, 0.5);
  margin-left: 15rpx;
  font-family: "PingFang SC", "Microsoft YaHei", sans-serif;
}

.empty-history {
  text-align: center;
  padding: 60rpx 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: rgba(30, 144, 255, 0.7);
  font-family: "PingFang SC", "Microsoft YaHei", sans-serif;
}