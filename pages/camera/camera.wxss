.container {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
  animation: fadeIn 0.5s ease-out;
}

.camera-container {
  background-color: white;
  border-radius: 10rpx;
  padding: 40rpx;
  text-align: center;
  margin-bottom: 30rpx;
  animation: slideInUp 0.5s ease-out;
}

.camera-placeholder {
  margin-bottom: 30rpx;
  background: rgba(240, 240, 240, 0.7);
  border: 2rpx dashed #1E90FF;
  border-radius: 15rpx;
  padding: 30rpx;
}

.camera-placeholder icon {
  animation: pulse 2s infinite;
}

.placeholder-text {
  display: block;
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.camera-button {
  background-color: #1E90FF;
  color: white;
  border-radius: 40rpx;
  padding: 15rpx 40rpx;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.button-group {
  display: flex;
  gap: 20rpx;
  justify-content: center;
  flex-wrap: wrap;
}

.upload-button {
  background-color: #32CD32;
  color: white;
  border-radius: 50rpx;
  padding: 20rpx 35rpx;
  font-size: 28rpx;
  flex: 1;
  min-width: 200rpx;
  border: none;
  font-weight: 500;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.history-button {
  background-color: #FF6B35;
  color: white;
  border-radius: 50rpx;
  padding: 20rpx 35rpx;
  font-size: 28rpx;
  flex: 1;
  min-width: 200rpx;
  border: none;
  font-weight: 500;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.upload-button:hover, .history-button:hover {
  transform: translateY(-5rpx);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.2);
}

/* 上传图片显示区域 */
.uploaded-image-container {
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  text-align: center;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  animation: slideInUp 0.5s ease-out;
}

.uploaded-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #0288d1;
  display: block;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.uploaded-image {
  width: 100%;
  max-width: 600rpx;
  height: 400rpx;
  border-radius: 15rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
  border: 2rpx solid rgba(255, 255, 255, 0.7);
}

.result-container {
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 30rpx;
  text-align: center;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  animation: slideInUp 0.5s ease-out;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #0288d1;
  display: block;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.result-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.result-info {
  width: 100%;
  text-align: center;
}

.nation-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #0288d1;
  display: block;
  margin-bottom: 15rpx;
  padding: 25rpx;
  background: linear-gradient(135deg, rgba(179, 229, 252, 0.8) 0%, rgba(129, 212, 250, 0.8) 100%);
  border-radius: 15rpx;
  border: 2rpx solid rgba(33, 150, 243, 0.5);
  box-shadow: 0 6rpx 15rpx rgba(33, 150, 243, 0.2);
  animation: resultAppear 0.8s ease-out;
}

.confidence {
  font-size: 28rpx;
  color: #0288d1;
  padding: 12rpx 20rpx;
  background: rgba(225, 245, 254, 0.8);
  border-radius: 10rpx;
  display: inline-block;
  box-shadow: 0 4rpx 10rpx rgba(33, 150, 243, 0.1);
}

/* 历史记录样式 */
.history-container {
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  animation: slideInUp 0.5s ease-out;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid rgba(2, 136, 209, 0.2);
}

.history-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #0288d1;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.clear-button {
  background: linear-gradient(135deg, #ff4757 0%, #d32f2f 100%);
  color: white;
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  line-height: 1;
  border: none;
  box-shadow: 0 4rpx 10rpx rgba(211, 47, 47, 0.3);
  transition: all 0.3s ease;
}

.clear-button:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 5rpx rgba(211, 47, 47, 0.4);
}

.history-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.history-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 15rpx;
  background: rgba(245, 245, 245, 0.8);
  border-radius: 15rpx;
  border: 1rpx solid rgba(2, 136, 209, 0.2);
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
  animation: slideInUp 0.3s ease-out;
}

.history-item:nth-child(1) {
  animation-delay: 0.1s;
}

.history-item:nth-child(2) {
  animation-delay: 0.2s;
}

.history-item:nth-child(3) {
  animation-delay: 0.3s;
}

.history-item:nth-child(4) {
  animation-delay: 0.4s;
}

.history-item:nth-child(5) {
  animation-delay: 0.5s;
}

.history-item:nth-child(6) {
  animation-delay: 0.6s;
}

.history-item:nth-child(7) {
  animation-delay: 0.7s;
}

.history-item:nth-child(8) {
  animation-delay: 0.8s;
}

.history-item:nth-child(9) {
  animation-delay: 0.9s;
}

.history-item:nth-child(10) {
  animation-delay: 1.0s;
}

.history-item:active {
  background: rgba(179, 229, 252, 0.5);
  transform: scale(0.98);
}

.history-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  object-fit: cover;
  border: 2rpx solid rgba(255, 255, 255, 0.7);
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.history-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.history-nation {
  font-size: 30rpx;
  font-weight: bold;
  color: #0288d1;
  margin-bottom: 5rpx;
}

.history-confidence {
  font-size: 24rpx;
  color: rgba(2, 136, 209, 0.8);
  margin-bottom: 5rpx;
}

.history-time {
  font-size: 22rpx;
  color: rgba(2, 136, 209, 0.6);
}

.history-arrow {
  font-size: 32rpx;
  color: rgba(2, 136, 209, 0.4);
  margin-left: 15rpx;
}

.empty-history {
  text-align: center;
  padding: 60rpx 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: rgba(2, 136, 209, 0.6);
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideInUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
  }
}

@keyframes resultAppear {
  0% {
    opacity: 0;
    transform: translateY(50rpx) scale(0.8);
  }
  50% {
    opacity: 0.7;
    transform: translateY(-20rpx) scale(1.05);
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}