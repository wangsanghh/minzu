.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
}

.camera-container {
  background-color: white;
  border-radius: 10rpx;
  padding: 40rpx;
  text-align: center;
  margin-bottom: 30rpx;
}

.camera-placeholder {
  margin-bottom: 30rpx;
}

.placeholder-text {
  display: block;
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.camera-button {
  background-color: #1E90FF;
  color: white;
  border-radius: 40rpx;
  padding: 15rpx 40rpx;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.upload-button {
  background-color: #32CD32;
  color: white;
  border-radius: 40rpx;
  padding: 15rpx 40rpx;
  font-size: 32rpx;
}

.result-container {
  background-color: white;
  border-radius: 10rpx;
  padding: 30rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.result-content {
  display: flex;
  align-items: center;
}

.result-image {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
}

.result-info {
  flex: 1;
}

.nation-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #1E90FF;
  display: block;
  margin-bottom: 10rpx;
}

.confidence {
  font-size: 28rpx;
  color: #666;
}