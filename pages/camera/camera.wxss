.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
}

.camera-container {
  background-color: white;
  border-radius: 10rpx;
  padding: 40rpx;
  text-align: center;
  margin-bottom: 30rpx;
}

.camera-placeholder {
  margin-bottom: 30rpx;
}

.placeholder-text {
  display: block;
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.camera-button {
  background-color: #1E90FF;
  color: white;
  border-radius: 40rpx;
  padding: 15rpx 40rpx;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.button-group {
  display: flex;
  gap: 20rpx;
  justify-content: center;
  flex-wrap: wrap;
}

.upload-button {
  background-color: #32CD32;
  color: white;
  border-radius: 40rpx;
  padding: 15rpx 30rpx;
  font-size: 28rpx;
  flex: 1;
  min-width: 200rpx;
}

.history-button {
  background-color: #FF6B35;
  color: white;
  border-radius: 40rpx;
  padding: 15rpx 30rpx;
  font-size: 28rpx;
  flex: 1;
  min-width: 200rpx;
}

/* 上传图片显示区域 */
.uploaded-image-container {
  background-color: white;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  text-align: center;
}

.uploaded-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.uploaded-image {
  width: 100%;
  max-width: 600rpx;
  height: 400rpx;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.result-container {
  background-color: white;
  border-radius: 10rpx;
  padding: 30rpx;
  text-align: center;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.result-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.result-info {
  width: 100%;
  text-align: center;
}

.nation-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #1E90FF;
  display: block;
  margin-bottom: 15rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
  border-radius: 15rpx;
  border: 2rpx solid #2196f3;
}

.confidence {
  font-size: 28rpx;
  color: #666;
  padding: 10rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
  display: inline-block;
}

/* 历史记录样式 */
.history-container {
  background-color: white;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.history-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.clear-button {
  background-color: #ff4757;
  color: white;
  border-radius: 20rpx;
  padding: 8rpx 16rpx;
  font-size: 24rpx;
  line-height: 1;
}

.history-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.history-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 15rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
  border: 1rpx solid #e0e0e0;
  transition: all 0.3s ease;
}

.history-item:active {
  background-color: #e3f2fd;
  transform: scale(0.98);
}

.history-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  object-fit: cover;
}

.history-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.history-nation {
  font-size: 30rpx;
  font-weight: bold;
  color: #1E90FF;
  margin-bottom: 5rpx;
}

.history-confidence {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.history-time {
  font-size: 22rpx;
  color: #999;
}

.history-arrow {
  font-size: 32rpx;
  color: #ccc;
  margin-left: 15rpx;
}

.empty-history {
  text-align: center;
  padding: 60rpx 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}